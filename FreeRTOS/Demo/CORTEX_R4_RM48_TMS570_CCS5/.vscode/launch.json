{
    "version": "0.2.0",
    "configurations": [
        {
            "name": "Debug TMS570",
            "type": "cppdbg",
            "request": "launch",
            "program": "${workspaceFolder}/build/freertos.elf",
            "cwd": "${workspaceFolder}",
            "MIMode": "gdb",
            "miDebuggerPath": "arm-none-eabi-gdb",
            "debugServerPath": "openocd",
            "debugServerArgs": "-f interface/ti-icdi.cfg -f target/ti_hercules.cfg",
            "serverStarted": "Listening on port .+ for gdb connections",
            "stopAtEntry": true
        }
    ]
}